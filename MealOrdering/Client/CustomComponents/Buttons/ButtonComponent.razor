@inherits BaseButtonComponent

<button class="btn@(IsSmall ? " btn-sm" : "") btn@(IsOutline ? "-outline" : "")-@Color"
        type="submit"
        disabled="@IsBusy"
        onclick="@OnClick"
        title="@ToolTip">
    <span class="fa fa-@Icon fa-fw"/>
    @if (IsBusy)
    {
        <span class="spinner-border spinner-border-sm mr-1" />
    }
    @Caption
</button>